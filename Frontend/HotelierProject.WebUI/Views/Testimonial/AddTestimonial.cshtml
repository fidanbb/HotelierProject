@model CreateTestimonialDto

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label> Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label> Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Image Url</label>
    <input type="text" asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
    <br />
    <label>Description</label>
    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
   
    <button class="btn btn-primary">Add Testimonial</button>
    <a href="/Testimonial/Index" class="btn btn-danger">Cancel</a>
</form>


