@model List<ResultRoomDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-title">
    <h4>Room List</h4>

</div>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Room Number</th>
            <th>Title</th>
            <th>Price</th>
            <th>Delete</th>
            <th>Update</th>

        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.RoomNumber</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>
                    <a href="/Room/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </td>
                <td><a href="/Room/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>

            </tr>
        }
    </table>
    <a href="/Room/AddRoom/" class="btn mb-1 btn-rounded btn-outline-info">Add New Room</a>
</div>


