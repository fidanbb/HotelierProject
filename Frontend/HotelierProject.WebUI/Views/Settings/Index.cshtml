@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Profile and Password Update Page</h1>

<form method="post">
    <label>Your Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Your Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>Your Username</label>
    <input type="text" class="form-control" asp-for="Username" readonly />
    <br />
    <label>Your Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Your Password</label>
    <input type="password" class="form-control" asp-for="Password" />
    <br />
    <label>Confirm Password</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" />
    <br />
    <button class="btn btn-success">Update Profile</button>
</form>
