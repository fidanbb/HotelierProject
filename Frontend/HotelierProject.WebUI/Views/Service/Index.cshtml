@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}
<div class="card-title">
    <h4>Service List</h4>

</div>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>#</th> 
            <th> Title</th>
            <th>Delete</th>
            <th>Update</th>

        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td>
                    <a href="/Service/DeleteService/@item.ServiceID" class="btn mb-1 btn-rounded btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                </td>
                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-rounded btn-outline-success">Update</a></td>

            </tr>
        }
    </table>
    <a href="/Service/AddService/" class="btn mb-1 btn-rounded btn-outline-info">Add New Service</a>
</div>


