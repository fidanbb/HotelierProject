@model CreateStaffDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Staff Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Image Url</label>
    <input type="text" asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
    <br />
    <label>Facebook Url</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <span asp-validation-for="SocialMedia1" class="text-danger"></span>
    <br />
    <label>Twitter Url</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <span asp-validation-for="SocialMedia2" class="text-danger"></span>
    <br />
    <label>Instagram Url</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <span asp-validation-for="SocialMedia3" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Add Staff</button>
    <a href="/Staff/Index" class="btn btn-danger">Cancel</a>
</form>

