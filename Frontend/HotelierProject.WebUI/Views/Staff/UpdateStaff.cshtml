@model UpdateStaffDto

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="StaffID" />
    <label>Staff Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Social Media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <span asp-validation-for="SocialMedia1" class="text-danger"></span>
    <br />
    <label>Social Media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <span asp-validation-for="SocialMedia2" class="text-danger"></span>
    <br />
    <label>Social Media 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <span asp-validation-for="SocialMedia3" class="text-danger"></span>
    <br />
    <button class="btn btn-success">Update Staff</button>
    <a href="/Staff/Index" class="btn btn-danger">Cancel</a>
</form>


